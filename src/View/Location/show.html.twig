{% block content %}
	<div class="popup-link showQuestion">
		<a href="#popup3">Trouver la r√©ponse</a>
	</div>

	<!--popup3-->

	<div id="popup3" class="popup-container popup-style-3">
		<div class="popup-content showQuestions">
			<a href="#" class="close">&times;</a>
			<ul>
				<form class="form formQuestion" method="post" action="/result">
					<h2 class="logoTitle">Movie Guessr</h2>

					{% for proposal in proposals %}
						<div class="buttonGuessr">
							<input type="radio" required value={{proposal.movie_tag}} name="answer" id="{{proposal.movie_tag}}">
							<label class="questionGuessr" for="{{proposal.movie_tag}}">{{proposal.movie_name}}</label>
						</div>
					{% endfor %}

					<button class="btn buttonGuessr">Envoyer</button>
				</form>
			</div>
		</div>
	</div>
</div>

