{% extends "layout.html.twig" %}

{% block classBody %}indexBackground
{% endblock %}

{% block content %}
	<div id="menu" class="container-fluid d-flex flex-column flex-md-row align-items-md-center justify-content-between px-0 mb-4">
		<div>
			<a href="/">
				<img src="/assets/images/logo.svg">
			</a>
		</div>
		<div class="d-flex justify-content-center align-items-center pt-3 pt-md-0">
			<a href="/add" class="pe-3">Propose a new movie location</a>
			<a href="/questions" class="btn btn-outline-dark btn-lg btnPlayAgainDesk me-3 d-none d-md-block">Play Again</a>
		</div>
	</div>


	<div class="result d-flex flex-column justify-content-center w-100 d-md-none">
		<div class="row col-12 w-100 p-0 m-0">
			<div class="scene scene--card justify-content-center flex-column p-0">
				<div class="card col-12 border-0">
					<div class="card__face card__face--front col-12">
						<p class="turnCard">></p>
						{% if correctAnswer == true %}
							<h3 class="correctAnswer answerText">Correct answer !
							</h3>
						{% else %}
							<h3 class="falseAnswer answerText">False answer !
							</h3>
						{% endif %}
						<img id="image" class="poster img-fluid rounded mx-2">
					</div>
					<div class="card__face card__face--back col-12">
						<h2 class="titleCard">{{ location.movie_name }}</h2>
						<div class="dateCard">
							<p>Release Date :
							</p>
							<p id="date"></p>
						</div>
						<p id="description"></p>
					</div>
				</div>
			</div>
		</div>
		<div class="map col-12 d-md-none">
			<iframe class="iframeresult2" src="{{ location.url_map }}" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
		</div>
	</div>

	<div class="result d-flex justify-content-between text-light m-0 py-3 d-none d-md-flex">
		<div class="row col-12 w-100 p-0">
			<div class="d-flex col-8">

				<div class="col-5 d-none d-md-block px-5 align-self-center ms-1">
					<img id="image2" class="poster rounded img-fluid">
				</div>

				<div class="col-6 d-flex flex-column justify-content-between ">
					<div>
						{% if correctAnswer == true %}
							<h3 class="correctAnswer answerText">Correct answer !</h3>
						{% else %}
							<h3 class="falseAnswer answerText">False answer !</h3>
						{% endif %}
						<h2 class="movieNameCard">{{ location.movie_name }}</h2>
						<div class="d-flex lead">
							<p>Release Date :
							</p>
							<p id="date2"></p>
						</div>
						<p id="description2"></p>
					</div>
					<div class="text-center">
						<p class="m-0">
							Did you like this location ?</p>
						<div class="">
							<a>
								<img class="satisfaction liked m-2" src="/assets/images/smile.png" alt="{{location.id}}"></a>
							<a>
								<img class="satisfaction disliked m-2" src=" /assets/images/sad.png" alt="{{location.id}}"></a>
						</div>
					</div>
				</div>
			</div>

			<div class="mapDesktop col-4 d-none d-md-block pe-5">
				<div class="d-flex w-100 h-100">
					<iframe class="iframeresult align-self-center" src="{{ location.url_map }}" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
				</div>
			</div>
		</div>
	</div>
	<a class="btnPlayAgain align-middle fixed-bottom d-md-none text-center m-auto replay mb-2" href="/questions">Play Again</a>


{% endblock %}

{% block javascript %}
	<script src="/assets/js/movies.js"></script>
	<script type="text/javascript" src="/assets/js/card_flip.js"></script>
	<script src="/assets/js/satisfaction.js"></script>


{% endblock %}
